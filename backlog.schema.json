{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ralph-kimi.dev/backlog.schema.json",
  "title": "Ralph Backlog",
  "description": "Structured backlog for Ralph autonomous development system",
  "type": "object",
  "required": ["version", "project", "createdAt", "lanes"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Backlog format version",
      "enum": ["1.0.0"]
    },
    "project": {
      "type": "string",
      "description": "Project name"
    },
    "description": {
      "type": "string",
      "description": "Project description"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "When backlog was created"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When backlog was last updated"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "repository": { "type": "string" },
        "defaultBranch": { "type": "string", "default": "main" },
        "techStack": { "type": "array", "items": { "type": "string" } }
      }
    },
    "lanes": {
      "type": "object",
      "description": "Task lanes for organizing work",
      "properties": {
        "feature": {
          "type": "array",
          "description": "New features (only when system is green)",
          "items": { "$ref": "#/definitions/task" }
        },
        "bugfix": {
          "type": "array",
          "description": "Bug fixes (preempts feature work)",
          "items": { "$ref": "#/definitions/task" }
        },
        "hardening": {
          "type": "array",
          "description": "Refactoring, tests, guardrails",
          "items": { "$ref": "#/definitions/task" }
        },
        "infrastructure": {
          "type": "array",
          "description": "Deps, CI/CD, tooling",
          "items": { "$ref": "#/definitions/task" }
        }
      }
    },
    "systemStatus": {
      "type": "object",
      "properties": {
        "lastBuildStatus": {
          "type": "string",
          "enum": ["green", "yellow", "red", "unknown"]
        },
        "lastTestStatus": {
          "type": "string",
          "enum": ["green", "yellow", "red", "unknown"]
        },
        "blockingFailures": {
          "type": "array",
          "items": { "type": "string" }
        },
        "stabilityWindowMet": { "type": "boolean" }
      }
    }
  },
  "definitions": {
    "task": {
      "type": "object",
      "required": ["id", "title", "intent", "definitionOfDone", "status"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Z]+-[0-9]+$",
          "description": "Unique task ID (e.g., FEAT-001, BUG-001)"
        },
        "title": {
          "type": "string",
          "description": "Short, actionable title"
        },
        "intent": {
          "type": "string",
          "description": "What changes (behavior-level description)"
        },
        "description": {
          "type": "string",
          "description": "Detailed description"
        },
        "definitionOfDone": {
          "type": "object",
          "required": ["criteria"],
          "properties": {
            "criteria": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Explicit pass/fail checks"
            },
            "verifierBundle": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Commands/tests to run (e.g., lint, test, e2e)"
            },
            "playwrightScenarios": {
              "type": "array",
              "items": { "type": "string" },
              "description": "E2E scenarios that must pass"
            }
          }
        },
        "constraints": {
          "type": "object",
          "properties": {
            "scopeFiles": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Files/areas allowed to modify"
            },
            "noTouchFiles": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Files that must not be modified"
            },
            "dependencies": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Task IDs this depends on"
            }
          }
        },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "blocked", "ready_for_verify", "completed", "failed"]
        },
        "priority": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5,
          "description": "1 = critical, 5 = nice-to-have"
        },
        "createdAt": { "type": "string", "format": "date-time" },
        "startedAt": { "type": "string", "format": "date-time" },
        "completedAt": { "type": "string", "format": "date-time" },
        "attempts": { "type": "integer", "default": 0 },
        "maxAttempts": { "type": "integer", "default": 5 },
        "artifacts": {
          "type": "object",
          "properties": {
            "branch": { "type": "string" },
            "commitHash": { "type": "string" },
            "prUrl": { "type": "string" },
            "testResults": { "type": "string" },
            "screenshots": { "type": "array", "items": { "type": "string" } }
          }
        },
        "failureLog": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": { "type": "string", "format": "date-time" },
              "attempt": { "type": "integer" },
              "error": { "type": "string" },
              "verifierOutput": { "type": "string" }
            }
          }
        },
        "notes": { "type": "string" }
      }
    }
  }
}
